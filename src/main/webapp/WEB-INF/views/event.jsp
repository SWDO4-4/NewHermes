 <section class="ftco-section bg-light">
    <div class="container">
        <div class="row d-flex">
	        <c:forEach items="${requestScope.list}" var="eventVO">
	          <div class="col-md-3 d-flex ftco-animate">
	            <div class="blog-entry align-self-stretch">
	              <a class="block-20"> <img src="${eventVO.img}" style="width: 300px; height: 300px;"> </a>
	              <div class="text p-4 d-block">
	              	<span class="tag">${eventVO.period}</span>
	                <h3 class="heading mt-3"><a>${eventVO.title}</a></h3>
	                <div class="meta mb-3">
	                  <div>${eventVO.location}</div>
	                  <div><span class="icon-chat"></span>${eventVO.content}</div>
	                </div>
	              </div>
	            </div>
	          </div>
	        </c:forEach>         
